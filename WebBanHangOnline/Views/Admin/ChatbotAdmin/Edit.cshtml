@model WebBanHangOnline.Models.EF.ChatMessage

@{
    ViewBag.Title = "Chỉnh sửa câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Chỉnh sửa câu hỏi</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Question, "Câu hỏi")
            @Html.TextAreaFor(m => m.Question, new { @class = "form-control", rows = "3" })
            @Html.ValidationMessageFor(m => m.Question, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Answer, "Câu trả lời")
            @Html.TextAreaFor(m => m.Answer, new { @class = "form-control", rows = "5" })
            @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.IsActive)
                @Html.LabelFor(m => m.IsActive, "Hoạt động")
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-default">Quay lại</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 