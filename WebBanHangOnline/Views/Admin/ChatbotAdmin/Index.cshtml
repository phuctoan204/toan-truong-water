@model IEnumerable<WebBanHangOnline.Models.EF.ChatMessage>

@{
    ViewBag.Title = "Quản lý Chatbot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Quản lý Chatbot</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Thêm mới</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Câu hỏi</th>
                <th>Câu trả lời</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Question</td>
                    <td>@item.Answer</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge badge-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Không hoạt động</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Sửa</a>
                        <button class="btn btn-sm btn-danger" onclick="deleteMessage(@item.Id)">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        function deleteMessage(id) {
            if (confirm('Bạn có chắc chắn muốn xóa câu hỏi này?')) {
                $.post('@Url.Action("Delete")', { id: id }, function() {
                    location.reload();
                });
            }
        }
    </script>
} 