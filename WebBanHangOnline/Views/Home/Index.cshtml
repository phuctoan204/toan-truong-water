    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    .custom-body3 {
        background-color: #e6e6e6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 700px;
        gap: 50px; /* Khoảng cách giữa hai phần tử */
    }

    .main_slider1 {
        display: flex;
        justify-content: space-around;
        align-items: center;
        height: 700px;
        background-size: cover;
        background-position: center;
        color: #333;
    }

    .left_content, .right_content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Khung chính chứa hình splash và hiệu ứng */
    .right_content {
        background-image: url('../Content/assets/images/water-splash1.png'); /* Đảm bảo đúng đường dẫn */
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        width: 1000px;
        height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        animation: waterEffect 5s infinite ease-in-out; /* Hiệu ứng lặp */
        border-radius: 50%;
    }

    /* Hiệu ứng waterEffect cho splash */
    .waterEffect {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05); /* Phóng to nhẹ ở giữa */
    }

    }

    .right_content {
        animation: waterEffect 4s infinite ease-in-out; /* Hiệu ứng lặp lại */
    }

        .right_content h1 {
            font-size: 48px;
            color: #00aaff;
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }

        /* Hiệu ứng cho dòng chữ mô tả */
        .right_content p {
            font-size: 16px;
            color: #333;
            animation: fadeInMove 3s ease-out, pulse 1.5s infinite;
        }

    /* Hiệu ứng fadeInMove cho chữ xuất hiện và di chuyển lên */
    .fadeInMove {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Hiệu ứng pulse cho chữ nhấp nháy nhẹ */
    .pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.6;
    }

    }

    .contact_buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

        .contact_buttons a {
            text-decoration: none;
            padding: 10px 20px;
            background-color: #ff3366;
            color: white;
            border-radius: 5px;
            font-weight: bold;
        }

    /* Animation cho bounce của tiêu đề */
    .bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }
    }
</style>
