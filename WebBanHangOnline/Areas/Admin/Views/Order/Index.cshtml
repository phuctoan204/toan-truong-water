@model PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách đơn hàng";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body">

            <!-- Bộ lọc tìm kiếm -->
            <form method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.SearchString" />
                    </div>
                    <div class="col-md-2">
                        <select name="status" class="form-control">
                            <option value="">Tất cả trạng thái</option>
                            <option value="1" @(ViewBag.Status == 1 ? "selected" : "")>Chưa thanh toán</option>
                            <option value="2" @(ViewBag.Status == 2 ? "selected" : "")>Đã thanh toán</option>
                            <option value="3" @(ViewBag.Status == 3 ? "selected" : "")>Hoàn thành</option>
                            <option value="4" @(ViewBag.Status == 4 ? "selected" : "")>Hủy</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </form>

            <!-- Bảng danh sách đơn hàng -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên Khách hàng</th>
                        <th>Phone</th>
                        <th>Tiền</th>
                        <th>Phương thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        // Khởi tạo biến i để đếm số thứ tự
                        int i = 1 + (ViewBag.Page - 1) * ViewBag.PageSize; // Giá trị i sẽ bắt đầu từ đúng số thứ tự cho trang hiện tại.

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td> <!-- Hiển thị giá trị của i -->
                                <td>@item.Code</td>
                                <td>@item.CustomerName</td>
                                <td>@item.Phone</td>
                                <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)</td>
                                <td>@(item.TypePayment == 1 ? "COD" : "Chuyển khoản")</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge badge-warning">Chưa thanh toán</span>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <span class="badge badge-success">Đã thanh toán</span>
                                    }
                                    else if (item.Status == 3)
                                    {
                                        <span class="badge badge-primary">Hoàn thành</span>
                                    }
                                    else if (item.Status == 4)
                                    {
                                        <span class="badge badge-danger">Hủy</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/order/view/@item.Id" class="btn btn-sm btn-success">Xem</a>
                                    <a href="#" class="btn btn-sm btn-danger btnCapNhat" data-id="@item.Id">Cập nhật</a>
                                </td>
                            </tr>
                            i++; <!-- Tăng giá trị của i sau mỗi lần lặp -->
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>


            </table>

            <!-- Phân trang -->
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.SearchString, status = ViewBag.Status, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate }))
                </div>
            </div>
        </div>
    </div>

</section>

<!-- Modal cập nhật trạng thái -->
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="1">Chưa thanh toán</option>
                        <option value="2">Đã thanh toán</option>
                        <option value="3">Hoàn thành</option>
                        <option value="4">Hủy</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Lưu</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            // Khi người dùng nhấn vào nút Cập nhật
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');  // Mở modal
            });

            // Khi người dùng nhấn lưu
            $('body').on('click', '#btnLuu', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddTrangThai').val();  // Lấy trạng thái mới từ dropdown

                $.ajax({
                    url: '/admin/order/UpdateTT',
                    type: 'POST',
                    data: { id: id, trangthai: tt },
                    success: function (res) {
                        if (res.Success) {
                            alert(res.message);  // Hiển thị thông báo thành công
                            location.reload();    // Tải lại trang để cập nhật trạng thái
                        } else {
                            alert(res.message);  // Hiển thị thông báo lỗi
                        }
                    },
                    error: function () {
                        alert("Đã có lỗi xảy ra khi cập nhật trạng thái.");
                    }
                });
            });
        });
    </script>
}

