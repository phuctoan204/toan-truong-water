@model PagedList.IPagedList<WebBanHangOnline.Models.ViewModels.OrderHistoryViewModel>
@using PagedList.Mvc
@using WebBanHangOnline.Common

<section class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">
                <i class="fas fa-history"></i> Lịch Sử Mua Hàng - @ViewBag.FullName (@ViewBag.UserName)
            </h3>
            <a href="@Url.Action("XuatFilePdfLichSuMuaHang", "Account", new { userId = ViewBag.UserId })"
               class="btn btn-danger">
                <i class="fas fa-file-pdf"></i> Xuất PDF
            </a>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>STT</th>
                            <th>Mã ĐH</th>
                            <th>Ngày Đặt</th>
                            <th>Sản Phẩm</th>
                            <th>Giá</th>
                            <th>Số Lượng</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            foreach (var order in Model)
                            {
                                var productCount = order.OrderDetails.Count;

                                <tr>
                                    <td rowspan="@productCount" class="align-middle">@i</td>
                                    <td rowspan="@productCount" class="align-middle">@order.OrderCode</td>
                                    <td rowspan="@productCount" class="align-middle">@order.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>@order.OrderDetails[0].ProductName</td>
                                    <td>@Common.FormatNumber(order.OrderDetails[0].Price, 0) VNĐ</td>
                                    <td>@order.OrderDetails[0].Quantity</td>
                                    <td rowspan="@productCount" class="align-middle font-weight-bold">
                                        @Common.FormatNumber(order.TotalAmount, 0) VNĐ
                                    </td>
                                    <td rowspan="@productCount" class="align-middle">
                                        @if (order.Status == 1)
                                        {
                                            <span class="badge badge-warning">Chưa thanh toán</span>
                                        }
                                        else if (order.Status == 2)
                                        {
                                            <span class="badge badge-primary">Đã thanh toán</span>
                                        }
                                        else if (order.Status == 3)
                                        {
                                            <span class="badge badge-success">Hoàn thành</span>
                                        }
                                        else if (order.Status == 4)
                                        {
                                            <span class="badge badge-danger">Đã hủy</span>
                                        }
                                    </td>
                                </tr>

                                for (var j = 1; j < productCount; j++)
                                {
                                    <tr>
                                        <td>@order.OrderDetails[j].ProductName</td>
                                        <td>@Common.FormatNumber(order.OrderDetails[j].Price, 0) VNĐ</td>
                                        <td>@order.OrderDetails[j].Quantity</td>
                                    </tr>
                                }

                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle"></i> Không có lịch sử mua hàng nào.
                </div>
            }
        </div>

        <div class="card-footer d-flex justify-content-end">
            @Html.PagedListPager(
     Model,
     page => Url.Action("LichSuMuaHang", "Account", new { userId = ViewBag.UserId, page }),
     new PagedListRenderOptions
     {
         Display = PagedListDisplayMode.IfNeeded,
         MaximumPageNumbersToDisplay = 5,
         LinkToPreviousPageFormat = "«",
         LinkToNextPageFormat = "»",
         LinkToIndividualPageFormat = "{0}",

     }
 )
        </div>
    </div>
</section>
