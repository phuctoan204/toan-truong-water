@model IEnumerable<WebBanHangOnline.Models.ApplicationUser>
@{
    ViewBag.Title = "Quản lý tài khoản";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content">
    <!-- Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">
                <i class="fas fa-users"></i> Danh sách tài khoản
            </h3>
            <div class="card-tools d-flex align-items-center">
                <form action="/admin/account/index" method="get" class="form-inline">
                    <div class="input-group input-group-sm">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm tài khoản..." value="@Request.QueryString["searchTerm"]">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-info">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <a href="/admin/account/create" class="btn btn-success ml-3">
                    <i class="fas fa-plus-circle"></i> Thêm mới
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Tài khoản</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.UserName</td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/admin/account/edit/@item.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a href="#" data-user="@item.UserName" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                    <a href="@Url.Action("LichSuMuaHang", "Account", new { userId = item.Id })" class="btn btn-sm btn-info">
                                        <i class="fas fa-history"></i> Lịch Sử
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">Không có tài khoản nào được tìm thấy.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer d-flex justify-content-end">
            <nav>
                <!-- Pagination Placeholder -->
            </nav>
        </div>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function () {
                var user = $(this).data('user');
                var id = $(this).data('id');
                if (confirm("Bạn có chắc chắn muốn xóa tài khoản " + user + " không?")) {
                    $.ajax({
                        url: '/admin/account/DeleteAccount',
                        type: 'POST',
                        data: { user: user, id: id },
                        success: function (res) {
                            if (res.Success) {
                                $('#trow_' + id).fadeOut();
                            }
                        }
                    });
                }
            });
        });
    </script>
}
