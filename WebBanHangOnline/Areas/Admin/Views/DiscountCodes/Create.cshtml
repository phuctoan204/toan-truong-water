@model WebBanHangOnline.Models.EF.DiscountCode
@{
    ViewBag.Title = "Tạo mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tạo mã giảm giá</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Mã giảm giá</label>
        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Phần trăm giảm giá</label>
        @Html.TextBoxFor(model => model.DiscountPercent, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Số tiền giảm tối đa</label>
        @Html.TextBoxFor(model => model.MaxDiscountAmount, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ngày hết hạn</label>
        @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "form-control", type = "date" })
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
}